<% @apps.each do |app| %>
  <section class="app">
    <header>
      <h1><%= link_to app.name, app %></h1>
      <p><%= link_to app.url, app.url %></p>
    </header>

    <div class="description">
      <%= textilize app.description %>
    </div>
    
    <p class="links">
      <%= link_to t('view.apps.show_hints'), app_hints_path(app) %> |
      <%= link_to t('view.apps.expand'), '#', :class => 'toggle-expand',
        'data-contract-label' => t('view.apps.contract'),
        'data-expand-label' => t('view.apps.expand') %>
    </p>
  </section>
<% end %>

<nav class="links">
  <%= link_to t('view.apps.new'), new_app_path if current_user %>
  <%= will_paginate @apps %>
</nav>