<section class="show_item">
  <header>
    <h1><%= @image.name %></h1>
  </header>
  
  <figure>
    <%= image_tag @image.image.url, alt: @image.caption %>
    <figcaption><%= @image.caption %></figcaption>
  </figure>
</section>

<nav class="links">
  <%= link_to t('label.edit'), edit_image_path(@image) %> |
  <%= link_to t('label.delete'), @image, confirm: t('messages.confirmation'),
    method: :delete %> |
  <%= link_to t('label.back'), images_path %>
</nav>